<h1>Burgers!</h1>

<h2>ADD AN ORDER</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Order Name:</label>
    <input type="text" id="ca" name="name">
  </div>


  <button type="submit">Add Order</button>
</form>

<div>
  <section id="kitchen">
  <h2>Kitchen</h2>
  <ul>
    {{#each burgers}}
      {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
      {{/unless}}
    {{/each}}
  </ul>
  </section>

  <section id="diningRoom">
  <h2>Dining Room</h2>
  <ul>
    {{#each burgers}}
      {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
      {{/if}}
    {{/each}}
  </ul>
  </section>
</div>

<div id="appender"></div>
