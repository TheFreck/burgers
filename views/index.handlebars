<h1 class="title"><span id="logo">Burgers and More...</span> Burgers!</h1>
<br>
<br>
<br>


<div class="triGrid">
  <section id="kitchen">
  <h2 id="kitchenTitle">Kitchen</h2>
  <ul>
    {{#each burgers}}
      {{#unless served}}
        {{> burgers/burger-block served=true}}
      {{/unless}}
    {{/each}}
  </ul>
  </section>
  
  <button id="menuBtn"><h1>M</h1><br><h1>E</h1><br><h1>N</h1><br><h1>U</h1></button>

  <section id="diningRoom">
  <h2 id="diningRoomTitle">Dining Room</h2>
  <div>
  <ul>
    {{#each burgers}}
      {{#if served}}
        {{> burgers/burger-block served=false}}
      {{/if}}
    {{/each}}
  </ul>
  </div>
  </section>
</div>

<div id="menu" class="hide"></div>
<div id="orderName" class="hide">
  <h2 class="yourOrder">You ordered: <span id="burgerOrder">BURGER</span></h2>
  <form class="create-form">

    <div class="form-group">
      <label for="ca">What's the name on the order?</label>
      <br><br>
      <input type="text" id="ca" name="name" autofocus>
    </div>

    <button id="submitOrder" type="submit">Add Order</button>
  </form>
</div>